{{ 'announcement.css' | asset_url | stylesheet_tag }}

{% if section.settings['show-announcement'] %}
    <section class="top-nav">
        <div class="announcements-bar">
            <div class="announcement-bar-left-section">
                <div class="">
                    <span class="announcement-welcome">
                        ðŸ‘‹ welcome to our online 
                    </span>
                    <span class="announcement-store-highlighter">store</span>
                </div>
                <div class="announcement-info">
                    info@drivelync.com
                </div>
            </div>
            <div class="announcement-bar-right-section">
                <ul class="announcement-bar-inner-list">
                    {% comment %} {% if section.block.size == 0 %}
                        <li>
                            <a href="#">Help</a>
                        </li>
                        {% if shop.customer_accounts_enabled %}
                            {% if customer  %}
                                <li>
                                    <a href="/account">Account</a>
                                </li>
                            {% else  %}
                                <li>
                                    <a href="/account/login">Sign in</a>
                                </li>
                            {% endif %}
                        {% endif %}


                        {% else %}
                            {% for block in section.blocks %}
                            <li> 
                                <a href="{{ block.settings.link  }}">{{ block.settings.text  }}</a></li>
                            {% endfor %}
                    {% endif %} {% endcomment %}
                    <li class="top-nav-list">Corporate profile</li>
                    <li class="top-nav-list"> customer Service</li>
                    <li class="top-nav-list"> contact Us</li>
                    <li class="top-nav-list">Blog</li>
                    <li class="top-nav-list">Drivelync Club</li>
                    <li class="top-nav-list">USD</li>
                </ul>
            </div>
        </div>

        <style>
            .top-nav {
                background-color: {{ section.settings.background }};
                color: {{ section.settings.text_color }};
            }

        </style>
    </section>
{% endif %}

{% schema %}
{
    "name": "announcements-bar",
    "settings": [
        {
            "type": "checkbox", 
            "id": "show-announcement", 
            "label": "Show Announcement", 
            "default": true
        },
        {
            "type": "image_picker",
            "id": "image",
            "label": "Pick Image",
            "info": "png recommended format"
        },
        {
            "type": "image_picker",
            "id": "image2",
            "label": "Pick Image",
            "info": "png recommended format"
        },
        {
            "type": "color",
            "id": "background",
            "label": "Background",
            "default": "#F6F6F6"
        },
        {
            "type": "color",
            "id": "text_color",
            "label": "Text Color",
            "default": "#000000"
        }
    ],
    "blocks": [
        {
            "name": "Links",
            "type": "links",
            "limit": 4,
            "settings": [
                {
                    "type": "text",
                    "id": "text",
                    "label": "Text",
                    "default": "link"
                },
                {
                    "type": "url",
                    "id": "link",
                    "label": "Link"
                }
            ]
        }
    ]
}
{% endschema %}
