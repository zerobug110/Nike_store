{% if section.settings['show-announcement'] %}
    <section class="">
        <div class="announcements-bar">
            <div class="announcement-bar-left-section">
                {% if section.settings.image != blank %}
                    <img 
                        width="30"
                        height="40"
                        loading="lazy"
                        src="{{ section.settings.image | image_url }}"/>
                {% else %}
                    <img 
                        width="30"
                        height="40"
                        loading="lazy"
                        src="{{ 'a.png' | asset_url }}"/>
                {% endif %}
                {% if section.settings.image2 != blank %}
                    <img 
                        width="30"
                        height="40"
                        loading="lazy"
                        src="{{ section.settings.image2 | image_url }}"/>
                {% else %}
                    <img 
                        width="30"
                        height="40"
                        loading="lazy"
                        src="{{ 'b.png' | asset_url }}"/>
                {% endif %}
            </div>
            <div class="announcement-bar-right-section">
                <ul class="announcement-bar-inner-list">
                    {% if section.block.size == 0 %}
                        <li>
                            <a href="#">Help</a>
                        </li>
                        {% if shop.customer_accounts_enabled %}
                            {% if customer  %}
                                <li>
                                    <a href="/account">Account</a>
                                </li>
                            {% else  %}
                                <li>
                                    <a href="/account/login">Sign in</a>
                                </li>
                            {% endif %}
                        {% endif %}


                        {% else %}
                            {% for block in section.block %}
                            <li> 
                                <a href="{{ block.settings.link  }}">{{ block.settings.text  }}</a></li>
                            {% endfor %}
                    {% endif %}
                </ul>
            </div>
        </div>

        <style>
            .announcements-bar {
                background-color: {{ section.settings.background }};
                color: {{ section.settings.text_color }};
            }
        </style>
    </section>
{% endif %}

{% schema %}
{
    "name": "announcements-bar",
    "settings": [
        {
            "type": "checkbox", 
            "id": "show-announcement", 
            "label": "Show Announcement", 
            "default": true
        },
        {
            "type": "image_picker",
            "id": "image",
            "label": "Pick Image",
            "info": "png recommended format"
        },
        {
            "type": "image_picker",
            "id": "image2",
            "label": "Pick Image",
            "info": "png recommended format"
        },
        {
            "type": "color",
            "id": "background",
            "label": "Background",
            "default": "#F4F4F4"
        },
        {
            "type": "color",
            "id": "text_color",
            "label": "Text Color",
            "default": "#000000"
        }
    ],
    "blocks": [
        {
            "name": "Links",
            "type": "links",
            "limit": 4,
            "settings": [
                {
                    "type": "text",
                    "id": "text",
                    "label": "Text",
                    "default": "link"
                },
                {
                    "type": "url",
                    "id": "link",
                    "label": "Link"
                }
            ]
        }
    ]
}
{% endschema %}
