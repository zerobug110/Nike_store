{% if section.settings['show-announcement'] %}
    <section class="">
        <div class="announcements-bar">
            <div class="announcement-bar-left-section">
                {% if section.settings.image != blank %}
                    <img 
                        width="30"
                        height="40"
                        loading="lazy"
                        src="{{ section.settings.image | image_url }}"/>
                {% else %}
                    <img 
                        width="30"
                        height="40"
                        loading="lazy"
                        src="{{ 'a.png' | asset_url }}"/>
                {% endif %}
                {% if section.settings.image2 != blank %}
                    <img 
                        width="30"
                        height="40"
                        loading="lazy"
                        src="{{ section.settings.image2 | image_url }}"/>
                {% else %}
                    <img 
                        width="30"
                        height="40"
                        loading="lazy"
                        src="{{ 'b.png' | asset_url }}"/>
                {% endif %}
            </div>
            <div class="announcement-bar-right-section"></div>
        </div>

        <style>
            .announcements-bar {
                background-color: {{ section.settings.background }};
                color: {{ section.settings.text_color }};
            }
        </style>
    </section>
{% endif %}

{% schema %}
{
    "name": "announcements-bar",
    "settings": [
        {
            "type": "checkbox", 
            "id": "show-announcement", 
            "label": "Show Announcement", 
            "default": true
        },
        {
            "type": "image_picker",
            "id": "image",
            "label": "Pick Image",
            "info": "png recommended format"
        },
        {
            "type": "image_picker",
            "id": "image2",
            "label": "Pick Image",
            "info": "png recommended format"
        },
        {
            "type": "color",
            "id": "background",
            "label": "Background",
            "default": "#F4F4F4"
        },
        {
            "type": "color",
            "id": "text_color",
            "label": "Text Color",
            "default": "#000000"
        }
    ]
}
{% endschema %}
